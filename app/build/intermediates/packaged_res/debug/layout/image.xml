            android:id="@+id/r1c3"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/question" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/r2c1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/question" />
        <ImageView
            android:id="@+id/r2c2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/question" />
        <ImageView
            android:id="@+id/r2c3"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/question" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/r3c1"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/question" />
        <ImageView
            android:id="@+id/r3c2"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="wrap_content"
